sudo cd /root/DevOpsAL
sudo ls
if sudo /usr/local/bin/kubectl get all|grep webdeploy
then
sudo /usr/local/bin/kubectl delete all -l app=webdeploy
sudo /usr/local/bin/kubectl delete pvc -l app=webdeploy
sudo /usr/local/bin/kubectl create -f /root/DevOpsAL/webdeploy.yml
sleep 10
sudo /usr/local/bin/kubectl get all
else
sudo /usr/local/bin/kubectl create -f /root/DevOpsAL/deploy.yml
sleep 10
sudo /usr/local/bin/kubectl get all
fi
sudo /usr/local/bin/kubectl cp /root/DevOpsAL/index.html $(sudo /usr/local/bin/kubectl get pod | grep webdeploy  | awk '{print$1}'):/var/www/html/index.html


